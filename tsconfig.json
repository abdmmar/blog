{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro", ".astro/types.d.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
